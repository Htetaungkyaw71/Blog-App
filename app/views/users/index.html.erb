<h1>All Users</h1>

     <button class="add_post">
         <%= link_to "Add a post", new_user_post_path(@user) %>
      </button>

<% @users.each do |user| %>
<div class="userDiv">
    <div class="imgDiv">
        <img src="<%= user.photo %>">
    </div>
     <a href=<%= "/users/#{user.id}" %> class="usertextDiv">  
     <h1>
        <%= user.name %>
     </h1>  
     <p>
        Number of posts : <%= user.posts_counter %>
     </p>
      </a>
</div>



<% end %>